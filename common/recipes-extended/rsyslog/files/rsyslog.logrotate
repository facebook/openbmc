# /etc/logrotate.d/rsyslog

/var/log/messages
{
        rotate 5
        missingok
        notifempty
        size 10M
        delaycompress
        compress
        nodateext
        postrotate
		/bin/kill -HUP `cat /var/run/rsyslogd.pid 2> /dev/null` 2> /dev/null || true
        endscript
}

/var/log/auth.log
/var/log/daemon.log
/var/log/kern.log
/var/log/user.log
/var/log/cron.log
/var/log/debug
{
        rotate 4
        size 5M
        missingok
        notifempty
        compress
        delaycompress
        sharedscripts
        nodateext
        postrotate
		/bin/kill -HUP `cat /var/run/rsyslogd.pid 2> /dev/null` 2> /dev/null || true
        endscript
}
