# shellcheck disable=SC1091
. /usr/local/bin/openbmc-utils.sh

{%- for gpio in gpios %}
{% if gpio.comment is not none -%}
# {{ gpio.comment }}
{%- endif %}
setup_gpio {{ gpio.name }}  {{ gpio.pin }} {{ gpio.direction }} {{ gpio.default if gpio.default is not none }}
{%- endfor %}
