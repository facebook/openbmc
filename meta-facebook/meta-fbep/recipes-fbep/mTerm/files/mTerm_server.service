[Unit]
Description=mTerm server monitoring
After=setup_i2c.service
Wants=setup_i2c.service

[Service]
# TODO:
#	We need to identify which OAM is in use here
#	then set the proper baudrate.
Environment='BAUDRATE=115200'
ExecStart=/usr/local/bin/mTerm_server oam /dev/ttyS1 ${BAUDRATE}

[Install]
WantedBy=multi-user.target
